<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Radiance" Height="25" Width="300" Icon="Radiance.ico" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Topmost="True">
    <Grid>
		<Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Slider Name="brightness" Grid.Column="0" Maximum="100" AutoToolTipPlacement="TopLeft"></Slider>
        <Button Name="keys" Grid.Column="1" BorderThickness="0">
            <Image Source="Keys.ico"></Image>
        </Button>
    </Grid>
</Window>
